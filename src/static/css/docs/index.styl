@import 'vars'

sidebarWidth = 28 * unit

.docs
  background transparent
  align-items flex-start
  max-width pageWidth
  position relative
  margin 0 auto
  display flex

  @import 'sidebar'
  @import 'loader'

  .content
    max-width pageWidth - sidebarWidth - unit * 8
    margin-right unit * 8
    flex-grow 1
    @import 'headings'
    @import 'reference'
    @import 'markdown'
    @import 'pagination'

