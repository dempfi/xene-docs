.markdown
  > p
  > div
  > ul
    margin unit * 2 0

  ul
    padding 0 0 0 3 * unit

  @import 'headings'

  code
    background-color darken(superlight, 1%)
    border-radius radius
    padding 0 4px 2px

  a
    box-shadow inset 0 -1px 0 rgba(link, .5)
    transition ease 0.2s
    text-decoration none
    padding-bottom 1px
    cursor pointer
    color link

  .syntax.light
    box-shadow 0 0 0 1px ghost
    background-color superlight
    border-radius radius
    font-size unit * 1.5
    position relative
    margin unit * 2 0
    overflow auto
    color #515A66
    padding 0

    code
      background transparent
      padding unit * 2 unit * 3
      overflow-y hidden
      overflow-x auto
      display block

  table
    th, td
      border-bottom 1px solid ghost
      padding unit unit * 3
      vertical-align top
      text-align left
      &:first-child
        padding-left 0
      &:last-child
        padding-right 0

    th
      border-bottom 2px solid ghost

    .title
      font-size 2 * unit
      font-weight 600
