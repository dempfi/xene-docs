nav
  font-size unit * 1.625
  padding-bottom unit * 6
  overflow-x auto
  flex 1 1 auto
  margin 0

  ul
    padding 0
    margin 0

  .category
    padding-left unit * 4
    margin 0

    & + .category
      margin-top unit * 3

    .title
      text-transform uppercase
      font-size 1.375 * unit
      letter-spacing 1.5px
      font-weight 900
      color light

    li
      min-height unit * 3
      display block
      & > ul
        padding-left unit * 2
        display none
      &.has-active > ul
        display block

      &.article
        & > a
          font-weight 600

        & > ul ul li > a
          font-weight 400
          color dark

      &.is-active > a
        font-weight 600 !important
        color accent !important

    a
      margin-bottom (unit / 4)
      font-weight 400
      line-height unit * 3.75
      text-decoration none
      border-radius radius
      display inline-block
      position relative
      height 100%
      color black
      &:hover
        transition ease 0.2s
        color accent
