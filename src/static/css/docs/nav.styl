nav
  padding-bottom unit * 6
  font-size unit * 1.625
  overflow-x auto
  flex 1 1 auto
  margin 0

  ul
    padding 0
    margin 0

  .module
    padding-left unit * 4
    margin 0

    & + .module
      margin-top unit * 3

    .title
      text-transform uppercase
      font-size 1.375 * unit
      letter-spacing 1.5px
      align-items center
      font-weight 700
      display flex
      color dark
      .icon
        background-repeat no-repeat
        background-position 50% 50%
        width 18px; height 18px
        display inline-block
        margin-right 3px
        &.quick-start
          background-image url('/imgs/quick-start.svg')
        &.core
          background-image url('/imgs/core.svg')
          background-position 50% 0%
        &.slack
          background-image url('/imgs/slack.svg')

    li
      min-height unit * 3
      display block

      & > ul
        padding-left unit * 2
        display none

      & > a.active
        color accent
        & + ul
          display block

    li.article
      & > ul
        display block

    li.has-active > ul
      display block

    li.is-method
      & > a
        font-family 'Roboto Mono', monospace

    a
      margin-bottom (unit / 4)
      color lighten(dark, 10%)
      line-height unit * 3.75
      text-decoration none
      border-radius radius
      display inline-block
      position relative
      height 100%
      &:hover
        transition ease 0.2s
        color accent
