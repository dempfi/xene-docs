.searchbar
  box-shadow 0 0 0 1px rgba(136,152,170,.1), 0 15px 35px rgba(49,49,93,.1), 0 5px 15px ghost
  border-radius (unit / 2)
  width contentWidth
  position relative
  background white
  overflow hidden
  height unit * 5
  margin 0 auto

  > input
    font-family inherit
    font-size unit * 2
    padding-left unit
    font-weight 300
    max-width 100%
    height 100%
    width 100%
    color dark
    padding 0
    border 0
    margin 0
    &:focus
      outline none
