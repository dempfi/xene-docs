@import 'vars'
normalize-css()

*, *:before, *:after
  box-sizing border-box
  -webkit-font-smoothing antialiased

b, strong
  font-weight 600

html
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
  font-size unit * 1.75
  line-height rhytm
  color dark

body
  overflow auto

code, pre
  font-family 'Roboto Mono', monospace

pre, pre *
  -webkit-font-smoothing subpixel-antialiased

h1, h2, h3, h4, h5
  color black
  margin 0

.input
  height unit * 4
  border-radius (unit / 2)
  box-shadow rgba(#000, .1) 0 0 0 1px
  overflow hidden
  position relative

  > input
    border 0
    padding 0
    margin 0
    max-width 100%
    width 100%
    height 100%
    font-size unit * 2
    font-family inherit
    color light
    padding-left unit
    font-weight 300
    &:focus
      outline none

a.link
  transition 0.2s all ease
  box-shadow 0 1px accent
  text-decoration none
  color accent

